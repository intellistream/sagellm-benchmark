#!/usr/bin/env bash
# Pre-commit hook stub for sagellm-benchmark.
#
# All checks are defined in .pre-commit-config.yaml.
# This file is installed by:
#
#   pre-commit install          ← canonical setup command
#   ./quickstart.sh             ← also calls pre-commit install internally
#
# ⚠️  Do NOT manually cp this file to .git/hooks/pre-commit.
#     Always use `pre-commit install` or `./quickstart.sh`.

if command -v pre-commit >/dev/null 2>&1; then
    exec pre-commit hook-impl --config=.pre-commit-config.yaml --hook-type=pre-commit --hook-dir "$(cd "$(dirname "$0")" && pwd)" -- "$@"
else
    echo "pre-commit not found. Run: pip install pre-commit && pre-commit install" >&2
    exit 1
fi
